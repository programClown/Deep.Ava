                FontSize="15"
                Foreground="DodgerBlue"
                Text="Console "
                VerticalAlignment="Center" />
            <TextBlock
                FontSize="15"
                Foreground="DarkOrange"
                Text="{Binding Outputs.Count}"
                VerticalAlignment="Center" />
        </StackPanel>
        <Grid
            Grid.Row="1"
            Margin="0,10,0,0"
            Name="ConsoleGrid">
            <Border
                BorderBrush="DodgerBlue"
                BorderThickness="1"
                Margin="0">
                <Border.Effect>
                    <BlurEffect Radius="8" />
                </Border.Effect>
            </Border>
            <ScrollViewer Margin="5">
                <ItemsControl
                    FontSize="14"
                    Foreground="DodgerBlue"
                    HorizontalAlignment="Left"
                    ItemsSource="{Binding Outputs}"
                    Margin="5"
                    MinHeight="250"
                    MinWidth="800"
                    Name="ItemsControlOutput"
                    Padding="5">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel Orientation="Vertical" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel
                                Height="30"
                                Orientation="Horizontal"
                                Spacing="6">
                                <TextBlock
                                    FontWeight="{Binding TextWeight}"
                                    Foreground="{Binding TextBrush}"
                                    Text="{Binding Text}" />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            <StackPanel
                HorizontalAlignment="Right"
                IsVisible="{Binding #ConsoleGrid.IsPointerOver}"
                Margin="0,10,20,0"
                Spacing="5"
                VerticalAlignment="Top">
                <Button
                    Classes="Danger"
                    Command="{Binding ClearOutputCommand}"
                    Content="Clear" />
                <Button
                    Classes="Secondary"
                    Command="{Binding CopyOutputCommand}"
                    Content="Copy" />
            </StackPanel>
        </Grid>
    </Grid>

</UserControl>